{
  "name": "schematization",
  "version": "1.0.0",
  "description": "Implementation of the area-preserving simplification and schematization of polygonal subdivisions, proposed by Buchin et al. (2016)",
  "repository": "https://github.com/jakoblistabarth/area-preserving-polygon-schematization",
  "main": "index.js",
  "scripts": {
    "jasmine": "jasmine",
    "test": "npm run test-build && run jasmine",
    "type-check": "tsc -p config/tsconfig-base.json -w --noEmit",
    "dev": "nodemon",
    "test-build": "tsc -p config/tsconfig-cjs.json",
    "build": "esbuild --bundle assets/main.ts --sourcemap --outfile=dist/esm/main.bundle.js",
    "start": "browser-sync --config config/bs-config.js"
  },
  "nodemonConfig": {
    "ignore": [
      "spec/*",
      "dist/*"
    ],
    "ext": "js,mjs,ts,json",
    "exec": "npm run build"
  },
  "pre-commit": [
    "test"
  ],
  "author": "Jakob Listabarth",
  "license": "ISC",
  "dependencies": {
    "@mapbox/geojsonhint": "^3.0.1",
    "browser-sync": "^2.26.14",
    "esbuild": "^0.11.9",
    "graham_scan": "^1.0.4",
    "jasmine": "^3.7.0",
    "leaflet": "^1.7.1",
    "nodemon": "^2.0.7",
    "shpjs": "^3.6.3",
    "turf": "^3.0.14",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/graham_scan": "^1.0.28",
    "@types/leaflet": "^1.7.2",
    "@types/uuid": "^8.3.0",
    "pre-commit": "^1.2.2",
    "typescript": "^4.3.2"
  }
}
