{
  "name": "schematization",
  "version": "1.0.0",
  "description": "Implementation of the area-preserving simplification and schematization of polygonal subdivisions, proposed by Buchin et al. (2016)",
  "repository": "https://github.com/jakoblistabarth/area-preserving-polygon-schematization",
  "main": "index.js",
  "scripts": {
    "test": "jasmine-ts -P config/tsconfig-cjs.json",
    "type-check": "tsc --noEmit",
    "build": "esbuild --bundle src/main.ts --sourcemap --outfile=dist/esm-bundle/main.bundle.js",
    "start": "nodemon",
    "serve": "browser-sync --config config/bs-config.js"
  },
  "nodemonConfig": {
    "ignore": [
      "spec/*",
      "dist/*"
    ],
    "ext": "js,mjs,ts,json",
    "exec": "npm run build"
  },
  "pre-commit": [
    "type-check",
    "test"
  ],
  "author": "Jakob Listabarth",
  "license": "MIT",
  "dependencies": {
    "@fontsource/dm-mono": "^4.5.10",
    "@fontsource/dm-sans": "^4.5.9",
    "@fontsource/inter": "^4.5.15",
    "@fontsource/material-icons": "^4.5.4",
    "@mapbox/geojsonhint": "^3.1.0",
    "@types/jasmine": "^3.7.7",
    "@types/node": "^18.15.0",
    "@types/uuid": "^9.0.1",
    "browser-sync": "^2.26.14",
    "esbuild": "^0.17.11",
    "graham_scan": "^1.0.4",
    "jasmine": "^3.7.0",
    "jasmine-ts": "^0.4.0",
    "leaflet": "^1.9.3",
    "nodemon": "^2.0.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/graham_scan": "^1.0.28",
    "@types/leaflet": "^1.7.2",
    "pre-commit": "^1.2.2",
    "typescript": "^4.3.2"
  }
}
